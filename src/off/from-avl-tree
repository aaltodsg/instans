(in-package #:instans)

(define-class avl-node ()
  ((key :accessor avl-node-key :initarg :key :initform nil)
   (value :accessor avl-node-value :initarg :value :initform nil)
   (height :accessor avl-node-height :initarg :height :initform 1)
   (left :accessor avl-node-left :initarg :left :initform nil)
   (right :accessor avl-node-right :initarg :right :initform nil)))

(define-class avl ()
  ((tree :accessor avl-tree :initform nil)
   (count :accessor-avl-count :initform 0)
   (key-compare :accessor avl-key-compare :init-arg :key-compare :initform #'-)
   (value-equal :accessor avl-value-equal :init-arg :value-equal :initform #'equal)))

(defun avl-get-range (avl &key lower-bound lower-bound-inclusive-p upper-bound upper-bound-inclusive-p key-compare (node-value-getter #'(lambda (n) (avl-node-value n))))
  (let* ((result (list nil))
	 (tail result))
    (labels ((add-to-result (node)
	       (let ((new (copy-list (funcall node-value-getter node))))
		 (setf (cdr tail) new)
		 (setf tail (last new))))
	     (inclusion-test (node)
	       (let ((key (avl-node-key node)))
		 (and (or (null lower-bound) (if lower-bound-inclusive-p (<= lower-bound key) (< lower-bound key)))
		      (or (null upper-bound) (if upper-bound-inclusive-p (>= upper-bound key) (> upper-bound key))))))
	     (visit (node)
	       (when (and (avl-node-left node) (or (null lower-bound) (plusp (funcall key-compare (avl-node-key node) lower-bound))))
		 (visit (avl-node-left node)))
	       (when (inclusion-test node)
		 (add-to-result node))
	       (when (and (avl-node-right node) (or (null upper-bound) (plusp (funcall key-compare upper-bound (avl-node-key node)))))
		 (visit (avl-node-right node)))))
      (visit (avl-tree avl))
      (cdr result))))

(defun get-avl-node-height (node)
  (if node (avl-node-height node) 0))

(defun get-avl-node-balance (node)
  (if node (- (get-avl-node-height (avl-node-left node)) (get-avl-node-height (avl-node-right node))) 0))

(defun avl-node-right-rotate (y)
  (let* ((x (avl-node-left y))
	 (t2 (avl-node-right x)))
    (setf (avl-node-right x) y)
    (setf (avl-node-left y) t2)
    (setf (avl-node-height y) (1+ (max (get-avl-node-height (avl-node-left y)) (get-avl-node-height (avl-node-right y)))))
    (setf (avl-node-height x) (1+ (max (get-avl-node-height (avl-node-left x)) (get-avl-node-height (avl-node-right x)))))
    x))

(defun avl-node-left-rotate (x)
  (let* ((y (avl-node-right x))
	 (t2 (avl-node-left y)))
    (setf (avl-node-left y) x)
    (setf (avl-node-right x) t2)
    (setf (avl-node-height x) (1+ (max (get-avl-node-height (avl-node-left x)) (get-avl-node-height (avl-node-right x)))))
    (setf (avl-node-height y) (1+ (max (get-avl-node-height (avl-node-left y)) (get-avl-node-height (avl-node-right y)))))
    y))

(defun rebalance-avl-node-after-insert (node key compare)
  (setf (avl-node-height node) (1+ (max (get-avl-node-height (avl-node-left node)) (get-avl-node-height (avl-node-right node)))))
  (let ((balance (get-avl-node-balance node)))
    (cond ((> balance 1)
	   (cond ((minusp (funcall compare key (avl-node-key (avl-node-left node))))
					; Left Left Case
		  (avl-node-right-rotate node))
		 (t
					; Left Right Case
		  (setf (avl-node-left node) (avl-node-left-rotate (avl-node-left node)))
		  (avl-node-right-rotate node))))
	  ((< balance -1)
	   (cond ((minusp (funcall compare key (avl-node-key (avl-node-right node))))
					; Right Left Case
		  (setf (avl-node-right node) (avl-node-right-rotate (avl-node-right node)))
		  (avl-node-left-rotate node))
		 (t
					; Right Right Case
		  (avl-node-left-rotate node))))
	  (t node))))

(defun avl-node-insert (avl node key value)
  (labels ((insert-same-key-value (node value)
	     (unless (member value (avl-node-value node) :test (avl-value-equal avl))
	       (push value (avl-node-value node))
	       (incf (avl-count avl)))
	     node))
    (let ((compare (avl-key-compare avl)))
      (cond ((null node)
	     (insert-same-key-value (make-instance 'avl-node :key key :height 1) value))
	    (t
	     (let ((cmp (funcall compare key (avl-node-key node))))
	       (cond ((minusp cmp)
		      (setf (avl-node-left node) (avl-node-insert avl (avl-node-left node) key value :compare compare :same-key-handler same-key-handler))
		      (rebalance-avl-node-after-insert node key compare))
		     ((plusp cmp)
		      (setf (avl-node-right node) (avl-node-insert avl (avl-node-right node) key value :compare compare :same-key-handler same-key-handler))
		      (rebalance-avl-node-after-insert node key compare))
		     (t
		      (insert-same-key-value node value)))))))))

(defun avl-insert (avl key value)
  (let ((count (avl-count avl)))
    (setf (avl-tree avl) (avl-node-insert avl node key value))
    (> (avl-count avl) count)))

(defun avl-node-min-value-child (node)
  (loop for current = node then (avl-node-left current)
        while (avl-node-left current)
        finally (return current)))

(defun rebalance-avl-node-after-delete (root)
  (setf (avl-node-height root) (1+ (max (get-avl-node-height (avl-node-left root)) (get-avl-node-height (avl-node-right root)))))
  (let ((balance (get-avl-node-balance root)))
    (cond ((> balance 1)
	   (cond ((>= (get-avl-node-balance (avl-node-left root)) 0)
					; Left Left Case
		  (avl-node-right-rotate root))
		 (t
					; Left Right Case
		  (setf (avl-node-left root) (avl-node-left-rotate (avl-node-left root)))
		  (avl-node-right-rotate root))))
	  ((< balance -1)
	   (cond ((> (get-avl-node-balance (avl-node-right root)) 0)
					; Right Left Case
		  (setf (avl-node-right root) (avl-node-right-rotate (avl-node-right root)))
		  (avl-node-left-rotate root))
		 (t
					; Right Right Case
		  (avl-node-left-rotate root))))
	  (t
	   root))))

(defun avl-node-delete (root key value)
  (cond ((null root) nil)
	(t
	 (let* ((compare (avl-key-compare avl))
		(cmp (funcall compare key (avl-node-key root))))
	   (cond ((minusp cmp)
		  (setf (avl-node-left root) (avl-node-delete (avl-node-left root) key value)))
		 ((plusp cmp)
		  (setf (avl-node-right root) (avl-node-delete (avl-node-right root) key value)))
		 (t
		  (unless (eq value :all)
		    (when (member value (avl-node-value node) :test (avl-value-equal avl))
		      (setf (avl-node-value tree) (delete value (avl-node-value tree) :test test))
		      (decf (avl-count avl)))
		    node)))
	   ;; (inform "value ~S~%" value)
	   (cond ((and (not (eq value :all)) (avl-node-value root)) root)
		 ((and (avl-node-left root) (avl-node-right root))
		  (let ((temp (avl-node-min-value-child (avl-node-right root))))
		    (setf (avl-node-key root) (avl-node-key temp))
		    (setf (avl-node-value root) (avl-node-value temp))
		    (setf (avl-node-right root) (avl-node-delete (avl-node-right root) (avl-node-key temp) :compare compare :same-key-handler same-key-handler))))
		 (t
		  (let ((temp (or (avl-node-left root) (avl-node-right root))))
		    ;; (inform "Root ~S, temp ~S~%" root temp)
		    (cond ((null temp)
			   (setf root nil))
			  (t
			   (setf (avl-node-key root) (avl-node-key temp))
			   (setf (avl-node-value root) (avl-node-value temp))
			   (setf (avl-node-left root) (avl-node-left temp))
			   (setf (avl-node-right root) (avl-node-right temp))
			   (setf (avl-node-height root) (avl-node-height temp))))))))))
    (and root (rebalance-avl-node-after-delete root))))
    
(defun avl-delete (avl key value)
  (let ((count (avl-count avl)))
    (setf (avl-tree avl) (avl-node-delete avl node key :value value))
    (< (avl-count avl) count)))

(defun avl-node-depth-first-traversal (tree func)
  (cond ((null tree)
	 nil)
	(t
	 (avl-node-depth-first-traversal (avl-node-left tree) func)
	 (funcall func tree)
	 (avl-node-depth-first-traversal (avl-node-right tree) func))))

(defun print-avl (tree &optional (stream t) (indent 0))
  (cond ((null tree)
	 (format stream "~&~VT()" indent))
	(t
	 (print-avl (avl-node-right tree) stream (+ 4 indent))
	 (format stream "~&~VT~A" indent tree)
	 (print-avl (avl-node-left tree) stream (+ 4 indent)))))

(defmethod print-object ((this avl-node) stream)
  (format stream "<avl-node ~A: height: ~D, balance: ~D, value: ~A>" (avl-node-key this) (avl-node-height this) (get-avl-node-balance this) (avl-node-value this)))

(defun check-avl-balances (tree)
  (cond ((null tree) t)
	(t
	 (check-avl-balances (avl-node-left tree))
	 (assert** (< -2 (get-avl-node-balance tree) 2) "Wrong balance in node ~S" tree)
	 (check-avl-balances (avl-node-right tree)))))
				  
(defun check-avl-heights (tree)
  (cond ((null tree) 0)
	(t
	 (let* ((lh (check-avl-heights (avl-node-left tree)))
		(rh (check-avl-heights (avl-node-right tree)))
		(ch (1+ (max lh rh))))
	   (assert** (= (avl-node-height tree) ch) "Wrong height in ~S, should be ~S" tree ch)
	   ch))))

(defun avl-add (tree v)
  (let ((new (avl-insert tree v v)))
    (print-avl new)
    new))

(defun avl-rem (tree v)
  (let ((new (avl-delete tree v :value v)))
    (print-avl new)
    new))

(defun avl-add-list (tree vl)
  (loop for v in vl
	do (setf tree (avl-add tree v)))
  tree)

(defun avl-test1 (&optional (data '(9 5 10 0 6 11 -1 1 2)))
  (let ((tree nil))
    (inform "Adding ~S to ~S~%" data tree)
    (loop for x in data 
	  do (inform "Adding ~S~%" x)
	  do (setf tree (avl-insert tree x x))
	  do (print-avl tree)
	  do (check-avl-heights tree)
	  do (check-avl-balances tree))
    (let ((y 10))
      (inform "Removing ~S to ~S~%" y tree)
      (setf tree (avl-delete tree y :value y))
      (check-avl-heights tree)
      (check-avl-balances tree)
      (inform "After removing value from ~S~%" tree)
      (print-avl tree))))

(defun avl-key-value-pairs (tree)
  (cond ((null tree) nil)
	(t
	 (append (avl-key-value-pairs (avl-node-left tree)) (list (cons (avl-node-key tree) (avl-node-value tree)))  (avl-key-value-pairs (avl-node-right tree))))))

(defun avl-test2 (&optional verbosep)
  (labels ((sorted-pairs (l) (mapcar #'(lambda (x) (list x x)) (sort (copy-list l) #'<=)))
	   (check-contents (numbers tree)
	     (let ((contents (avl-key-value-pairs tree))
		   (sp (sorted-pairs numbers)))
	       (assert** (equal contents sp) "~%~S is different from~%~S" contents sp))))
    (let ((*random-state* (make-random-state t)))
      (loop with tree = nil
	    with numbers = nil
	    for i from 1 to 100
	    for n = (random (1+ i))
	    do (unless (member n numbers)
		 (push n numbers)
		 (when verbosep (inform "Adding ~S, numbers ~S~%" n numbers))
		 (setf tree (avl-insert tree n n))
		 (check-avl-heights tree)
		 (check-avl-balances tree)
		 (check-contents numbers tree))
	    finally (loop while numbers
			  for x = (nth (random (length numbers)) numbers)
			  do (progn
			       (setf numbers (delete x numbers))
			       (when verbosep (print-avl tree))
			       (when verbosep (inform "Deleting ~S~%" x))
			       (setf tree (avl-delete tree x :value x))
			       (when verbosep (print-avl tree))
			       (check-avl-heights tree)
			       (check-avl-balances tree)
			       (check-contents numbers tree)))))))
			     
		 
(defun avl-range-test (low include-low-p high include-high-p keys)
  (let ((tree nil))
    (loop for k in keys
	  do (setf tree (avl-insert tree k k)))
    (avl-get-range tree :lower-bound low :lower-bound-inclusive-p include-low-p :upper-bound high :upper-bound-inclusive-p include-high-p :key-compare #'-)))
